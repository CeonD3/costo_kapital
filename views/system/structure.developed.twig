{% extends "system/main.twig" %}

{% block css %}
{% endblock %}

{% block content %}
	{% set data = rsp.data %}
	<section class="slide-content">
		<div class="slide-reflex">
			<div class="container container-custom">
				<div class="row">
					{% include "system/information.twig" %}
				</div>
				<div class="row panel-parameter-market" id="AppStructureDeveloped">
					<div class="col-lg-12">
						<div class="card-panel">
							<div class="row">
								<div class="col-lg-12 mb-4">
									<div class="bg-five text-center py-2">
										<h4 class="m-0">Parámetros de un Mercado Desarrollado</h4>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-lg-3 float-left">
									<div class="form-group">
										<label class="label-control">7. Parámetros del cálculo</label>
										<div class="table-responsive">
											<table class="table table-one">
												<tbody>
													{% for item in data.system.calculations %}
													<tr>
														<td>{{ item.label }}</td>
														<td class="width-value">
															{{ item.value }}
															{% if item.comment %}
																<i class="fa fa-info-circle ml-1 float-right text-info" style="font-size:15px;" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="" data-original-title="{{ item.comment }}"></i>
															{% endif %}
														</td>
													</tr>
													{% endfor %}
												</tbody>
											</table>
										</div>
									</div>
								</div>
								<div class="col-lg-6 float-left">
									<div id="generalChart" style="min-height:350px;"></div>
								</div>
								<div class="col-lg-3 float-left">
									<div id="groupChart" style="min-height:350px;"></div>
								</div>
							</div>
							<div class="row panel-navigation">
								<div class="col-lg-12 text-center">
									<a href="/documentos/{{ rsp.data.code }}" style="font-weight:600;" class="float-left">
										<i class="fa fa-arrow-left"></i>
									</a>
									<a href="{{ '/documentos/' ~ rsp.data.code }}" style="font-weight:600;">
										<i class="fas fa-file-o mt-2" style="font-size:20px;"> Ir a Reportes</i>
									</a>
									<a href="{{ '/parametros-mercado-desarrollado/' ~ rsp.data.code }}" class="float-right">
										<i class="fa fa-arrow-right" aria-hidden="true"></i>
									</a>
								</div>
							</div>
							{# {% include 'system/navigation.twig' with  { _back: (rsp.data.system.instrument == 'Bono EE.UU' ? '/rendimiento/' : '/flujos/' ) ~ rsp.data.code, _next: '/parametros-mercado-desarrollado/' ~ rsp.data.code, _code: rsp.data.code } %} #}
						</div>
					</div>
					{% include 'system/publicidad.twig' %}
				</div>
			</div>
		</div>
	</section>
{% endblock %}

{% block js %} 
	<script type="text/javascript">
		let args = JSON.parse("{{ rsp.data |json_encode|e('js') }}");
		window.addEventListener('load', window.AppStructureDeveloped.init(args));
	</script>
{% endblock %}