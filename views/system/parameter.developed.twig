													<tr>
														<td class="bgone">{{ item.label }}</td>
														<td class="width-value">{{ item.value }}</td>
													</tr>
													{% endfor %}
												</tbody>
											</table>
										</div>
										<div class="table-responsive">
											<table class="table table-item">
												<tbody>
													{% for item in data.system.finance.results %}
													<tr>
														<td class="bgtwo">{{ item.label }}</td>
