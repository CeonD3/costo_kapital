<div class="modal" id="modal-record" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content p-4" style="border-radius: 2rem;">
            <div class="modal-body">
                <form id="formCreateRecord">
                    <div class="text-center mb-4">
                        <h4 class="k-title-modal">INICIAR CÁLCULO</h4>
                    </div>
                    <div class="form-group">
                        <label>Inversión</label>
                        <input type="text" class="form-control" name="name" autocomplete="off" placeholder="Ingrese el nombre de su inversión" required>
                    </div>
                    <div class="form-group">
                        <label>Empresa</label>
                        <input type="text" class="form-control" name="entity" autocomplete="off" placeholder="Ingrese el nombre de su empresa" required>
                    </div>
                    <div class="pt-4 text-right">
                        <button type="button" class="btn btn-four mr-2" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-three">Calcular</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>