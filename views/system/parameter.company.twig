									<div class="form-group">
										<label class="label-control">21. Par치metros del Costo de Capital Financiero</label>
										<div class="table-responsive">
											<table class="table table-item">
												<tbody>
													{% for item in data.system.finance.parameters %}
													<tr>
														<td class="bgone">{{ item.label }}</td>
														<td>{{ item.value }}</td>
													</tr>
													{% endfor %}
												</tbody>
											</table>
										</div>
										<div class="table-responsive">
											<table class="table table-item">
												<tbody>
													{% for item in data.system.finance.results %}
													<tr>
														<td class="bgtwo">{{ item.label }}</td>
														<td>{{ item.value }}</td>
													</tr>
													{% endfor %}
												</tbody>
											</table>
										</div>
									</div>
								</div>
