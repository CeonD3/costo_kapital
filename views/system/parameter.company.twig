														<td class="bgone">{{ item.label }}</td>
														<td>{{ item.value }}</td>
													</tr>
													{% endfor %}
												</tbody>
											</table>
										</div>
										<div class="table-responsive">
											<table class="table table-item">
												<tbody>
													{% for item in data.system.economic.results %}
													<tr>
														<td class="bgtwo">{{ item.label }}</td>
														<td>{{ item.value }}</td>
													</tr>
													{% endfor %}
												</tbody>
											</table>
										</div>
									</div>
								</div>
								<div class="col-lg-4 col-md-6 float-left">
									<div class="form-group">
										<label class="label-control">23. Costo de la deuda</label>
										<div class="table-responsive">
											<table class="table table-item">
												<tbody>
													{% for item in data.system.debt.parameters %}
													<tr>
														<td class="bgone">{{ item.label }}</td>
														<td>{{ item.value }}</td>
													</tr>
													{% endfor %}
												</tbody>
											</table>
										</div>
										<div class="table-responsive">
											<table class="table table-item">
												<tbody>
													{% for item in data.system.debt.results %}
													<tr>
														<td class="bgtwo">{{ item.label }}</td>
														<td>{{ item.value }}</td>
													</tr>
													{% endfor %}
												</tbody>
											</table>
										</div>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-lg-12 float-left">
									<div id="chart-html"></div>
									{# {% include 'system/chart.twig' %} #}
								</div>
							</div>
							<div class="row panel-navigation">
								<div class="col-lg-12 text-center">
									<a href="/reporte-sectorial/{{ rsp.data.code }}" class="float-left">
										<i class="fa fa-home-0 mt-2" style="font-size:20px;" aria-hidden="true">Ir a Resumen Sectorial</i>
									</a>
									<a href="/documentos/{{ rsp.data.code }}" style="font-weight:600;">
