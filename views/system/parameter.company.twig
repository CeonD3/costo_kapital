									</a>
								</div>
							</div>
							{# {% include 'system/navigation.twig' with  { _back: '/estructura-empresa/' ~ rsp.data.code, _next: '/promedio-dolares-empresa/' ~ rsp.data.code, _code: rsp.data.code } %} #}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}

{% block js %} 
	<script type="text/javascript">
		let args = JSON.parse("{{ rsp.data |json_encode|e('js') }}");
		window.addEventListener('load', window.AppParameterCompany.init(args));
	</script>
{% endblock %}