{% extends "system/main.twig" %}

{% block css %}
{% endblock %}

{% block content %}
	{% set data = rsp.data %}
	<section class="slide-content">
		<div class="slide-reflex">
			<div class="container container-custom">
				<div class="row">
					{% include "system/information.twig" %}
				</div>
				<div class="row panel-parameter-market" id="AppAverageCompany">
					<div class="col-lg-12">
						<div class="card-panel">
							<div class="row">
								<div class="col-lg-12 mb-4">
									<div class="bg-five text-center py-2">
										<h4 class="m-0">Costo de Capital en Mi Empresa (En moneda nacional)</h4>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-lg-5">
									<div class="form-group">
										<label class="label-control">26. Parámetros del Costo Promedio Ponderado de Capital ( CPPC)</label>
										<div class="table-responsive">
											<table class="table table-item">
												<tbody>
													{% for index,item in data.system.general.parameters %}
													<tr>
														<td class="bgone">
														{% if index == 0 %}
															<i class="fa fa-info-circle mr-2" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="El porcentaje de deuda y capital son un promedio del sector en el New York Stock Change"></i>	
														{% endif %}
														{{ item.label }}
														</td>
														<td class="width-value">{{ item.value }}</td>
													</tr>
													{% endfor %}
												</tbody>
											</table>
										</div>
										<div class="table-responsive">
											<table class="table table-item">
												<tbody>
													{% for item in data.system.general.results %}
													<tr>
														<td class="bgtwo">{{ item.label }}</td>
														<td class="width-value">{{ item.value }}</td>
													</tr>
													{% endfor %}
												</tbody>
											</table>
										</div>
									</div>
									<div class="form-group">
										<label class="label-control">27. Parámetros de comparación</label>
										<div class="table-responsive">
											<table class="table table-item">
												<tbody>
													{% for index,item in data.system.general.comparations %}
													<tr>
														<td class="bgone">
														{{ item.label }}
														</td>
														<td class="width-value">{{ item.value }}</td>
													</tr>
													{% endfor %}
												</tbody>
											</table>
										</div>
									</div>
								</div>
								<div class="col-lg-7 float-left">
									<div id="lineChart" style="height:350px;"></div>
								</div>
							</div>
							<div class="row panel-navigation">
								<div class="col-lg-12 text-center">
									<a href="/promedio-dolares-empresa/{{ rsp.data.code }}" class="float-left">
										<i class="fa fa-arrow-left" aria-hidden="true"></i>
									</a>
									<a href="/documentos/{{ rsp.data.code }}" style="font-weight:600;">
										<i class="fas fa-home-o mt-2" style="font-size:20px;"> Ir a Reportes</i>
									</a>
									<a href="/reporte/{{ rsp.data.code }}" class="float-right">
										<i class="fa fa-home-o mt-2" style="font-size:20px;">Ir a Reporte de Mi Empresa</i>
									</a>
								</div>
							</div>
							{# {% include 'system/navigation.twig' with  { _back: '/promedio-dolares-empresa/' ~ rsp.data.code, _next: '/reporte/' ~ rsp.data.code, _code: rsp.data.code } %} #}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}

{% block js %} 
	<script type="text/javascript">
		let args = JSON.parse("{{ rsp.data |json_encode|e('js') }}");
		window.addEventListener('load', window.AppAverageCompany.init(args));
	</script>
{% endblock %}