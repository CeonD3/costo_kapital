{% extends "home/main.twig" %}

{% block css %}
<link rel="stylesheet" href="/assets/css/style_costo_capital.css">
<link rel="stylesheet" href="/assets/css/style_page_home.css">
{% endblock %}

{% block content %}
	<section class="bgwhite">
		<div class="container container-custom">
			<div class="row mx-auto pt-4">
				<div class="col-lg-6 form-group">
					<div class="accordion" id="accordionExample">
						{% for i, servicio in servicio.data%}
						<div class="card acordion {{ i == 0 ? ' acordion-active shadow ' : '' }}" data-id="{{ i+1 }}">
							<div class="acordion-header" id="heading{{ i+1 }}">
								<h2 class="mb-0">
									<button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse{{ i+1 }}" aria-expanded="true" aria-controls="collapse{{ i+1 }}">
										{{ servicio.titulo | raw }}
									</button>
								</h2>
							</div>

							<div id="collapse{{ i+1 }}" class="collapse {{ i == 0 ? ' show' : '' }}" aria-labelledby="heading{{ i+1 }}" data-parent="#accordionExample">
								<div class="card-body acordion-body">
									{{ servicio.stitulo | raw }}
								</div>
							</div>
						</div>
						{% endfor %}
					</div>
				</div>	
				<div class="col-md-6">
					<div class="presentacion-body">
						{% for i, servicio in servicio.data%}
						<div id="img_{{ i+1 }}" class="item_presentacion active">
							{% if servicio.tipo_file == 'image' %}
							<img src="{{ servicio.icono }}" class="d-block">
							{% endif %}
							{% if servicio.tipo_file == 'video' %}
							<video class="d-block" id="video_{{ i+1 }}" controls muted="muted" src="{{ servicio.icono }}" --autoplay-policy="no-user-gesture-required">
								El video no es compatible con su navegador.
							</video>
							{% endif %}
						</div>
						{% endfor %}
					</div>
				</div>
				<div class="col-md-12">
					<p class="pt-2 pb-2" style="line-height: 40px;"><b style="font-size:1.5rem;">Para consolidar tus conocimientos:</b> 
						<a class="btn btn-four px-4 py-2 ml-4" target="_blank" href="{{ contacto.data.link }}"><strong>Clic aqu√≠</strong></a>
					</p>
				</div>
			</div>
		</div>
	</section>
	{% include "home/panel.cost.float.twig" %}
{% endblock %}

{% block js %}
    <script type="text/javascript">
        $(".header-item ul .nav-item").eq(0).addClass("active-head");
    </script>
{% endblock %}