{% extends "home/main.twig" %}

{% block css %}
<!--link rel="stylesheet" href="/assets/css/style_login.css"-->
<link rel="stylesheet" href="/assets/css/style_page_home.css">
<style>
	body{
		background-image: url('/assets/image/Imagen3.jpg');
		background-repeat: no-repeat;
		background-size: 100% 100%;
	}
	footer{
		display: none;
	}
</style>
{% endblock %}

{% block content %}
	<section class="slide-content">
		<div class="container pb-5">
			<div class="row">
				<div class="col-lg-12 float-left form-group text-center">
					<div class="section-panel-title">
						<h4>Inicia <span>Sesión</span></h4>
						<div class="linea-two"></div>
					</div>
				</div>
				<div class="col-lg-4 col-md-8 col-sm-12 form-group mx-auto">

					<div class="cont-form" id="iniciar_sesion">
						<div class="cont-content text-center">
	                    	<form id="frmLogin">
								<div class="row">
									<div class="form-group col-12 float-left">
										<input type="email" class="form-control" placeholder="Usuario" name="email" required>
									</div>
									<div class="form-group col-12 float-left">
										<input type="password" class="form-control" placeholder="Contraseña" name="password" minlength="4" required>
									</div>
	                   			
									<div class="col-12">
										<div class="form-check float-left ml-3" >
											<input type="checkbox" class="form-check-input" id="exampleCheck1">
											<label class="form-check-label" for="exampleCheck1"><span>Recordarme</span></label>
										</div>

										<div class="form-check  float-right ml-3" >
											<label class="form-check-label" for="exampleCheck1"><span> <a href="#" data-toggle="modal" data-target="#modalPass" style="color: var(--color-three);">Olvide la contraseña</a></span></label>
										</div>
									</div>
								</div>
							</form>	                	
	                		<br>
	                		<button class="px-3 py-2 btn-three border-0" type="submit" form="frmLogin">Iniciar Sesión</button>
	                		<p class="m-4"> ¿No tienes una cuenta? <a href="" onclick="registrar()"> Regístrate gratis </a></p>
	                	</div> 
					</div>
					<div class="cont-form" id="registrar_cuenta" style="display: none">
						<div class="cont-content text-center">
	               			<div class="row">
								<form id="frmRegister" class="w-100">
									<div class="form-group col-12 ">
										<input type="email" class="form-control" placeholder="Email" name="email" required>
									</div>
									<div class="form-group col-12 ">
										<input type="password" class="form-control" placeholder="password" name="password" required>
									</div>
	                    		</form>
	                		</div>
	                		<br>
	                		<button class="px-3 py-2 btn-three border-0" type="submit" form="frmRegister">Crear cuenta</button>
	                		<p class="m-4"> ¿Ya tienes una cuenta?</p>
	                		<div class="row linea-prima">
	                			<div class="col-4 linea"> </div>
	                			<p class="col">°</p>
	                			<div class="col-4 linea"> </div>
	                		</div>           
	                		<a href="" onclick="init_sesion()" class="px-3 py-2 btn-for">Iniciar Sesión</a>
	           			</div> 
					</div>

				</div>
			</div>
		</div>
	</section>
	<section>
		<div class="modal fade" id="modalPass" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">INGRESE CORREO ELECTRÓNICO</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<form id="frmForgotPasswordUser">
							<div class="form-group">
								<label>Email</label>
								<input type="email" class="form-control" name="email" required>
								<small class="form-text text-muted">Ingrese su correo electrónico registrado en la plataforma para validar su información.</small>
							</div>
						</form>
					</div>
					<div class="modal-footer">
						<button class="px-3 py-2 btn-three" type="submit" form="frmForgotPasswordUser">Enviar</button>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}